{% extends "base.html.twig" %}
{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center mb-4">Znajdź swoją odpowiedź</h2>
            {{ form_start(form, {'attr': {'class': 'search-form'}}) }}
            <div class="input-group">
                <input type="text"
                       class="form-control"
                       placeholder="Wpisz pytanie..."
                       aria-label="Wpisz pytanie..."
                       aria-describedby="search-button"
                        {{ form_widget(form.query, {'attr': {'class': 'form-control', 'placeholder': 'Wpisz pytanie...'}}) }}
                <button type="submit" class="btn btn-primary" id="search-button">
                    <i class="bi bi-search"></i>Szukaj
                </button>
            </div>
            {{ form_end(form) }}
            <a class="btn btn-primary btn-lg card-btn" href="{{ path('homepage') }}">Home</a>
        </div>
    </div>
</div>
{% endblock %}