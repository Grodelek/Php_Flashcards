{% extends "base.html.twig" %}

{% block body %}
     {{include('flashcards/navbar.html.twig')}}
    <h1 class="text-center">Add a flashcard!</h1>
    <div class="d-flex justify-content-center">
        <div class="w-50">
            {{form_start(form, {'attr': {'class': 'form-horizontal'}})}}
            {{form_row(form.topic, {'attr': {'class': 'form-control mb-3'}})}}
            {{form_row(form.answer, {'attr': {'class': 'form-control mb-3'}})}}
            <div class="form-group">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{form_end(form)}}
            </div>
            </div>
    <div style="text-align: center;">
    <a class="btn btn-primary mx-2" href="{{ path('homepage') }}">Home</a>
    </div>
    <div style="text-align: center;">
    <a class="btn btn-primary mx-2" href="{{ path('cards_all') }}">Flashcards</a>
    </div>
{% endblock %}
